<xcad:DockingManager x:Class="Ui.Wpf.Common.DockingManagers.VsDockingManager"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:xcad="http://schemas.xceed.com/wpf/xaml/avalondock"
                     xmlns:ap="clr-namespace:Ui.Wpf.Common.AttachedProperties"
                     mc:Ignorable="d"
                     d:DesignHeight="450" d:DesignWidth="800">
    <xcad:LayoutRoot>
        <xcad:LayoutPanel Orientation="Vertical">
            <xcad:LayoutPanel Orientation="Horizontal">
                <xcad:LayoutAnchorablePane ap:DockContainer.Name="ToolsLeft" DockWidth="300"/>
                <xcad:LayoutDocumentPane ap:DockContainer.Name="Views" />
                <xcad:LayoutAnchorablePane ap:DockContainer.Name="ToolsRight" DockWidth="300"/>
            </xcad:LayoutPanel>
            <xcad:LayoutAnchorablePane ap:DockContainer.Name="ToolsBottom" DockHeight="300"/>
        </xcad:LayoutPanel>
    </xcad:LayoutRoot>
</xcad:DockingManager>